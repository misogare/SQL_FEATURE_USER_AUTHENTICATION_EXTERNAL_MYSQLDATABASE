        /* background-color: #6b635b; */
        background-color: #204c39;
        text-align: center;
        color: aliceblue;
    }

    #banner_text {
        align-items: center;
        width: 690px;
        margin: auto;
        font-size: 18px;
    }

    .button {
        font-size: 28px;
    }

    h1 {
        font-family: "Avenir Next", Calibri, Verdana, sans-serif;
    }
    /* try speerd page */
    .banner-container-speerd {
        /* max-width: 2000px; */
        padding-top: 20px;
        padding-bottom: 20px;
