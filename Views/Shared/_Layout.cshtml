<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/App.styles.css" asp-append-version="true" />

    <!--css-->
    <style>

        #logo {
            color: black;
            font-size: 24px;
            font-family: inherit;
        }

        #navs {
            padding-left: 100px;
        }

        .nav-item {
            list-style-type: none;
            font-family: inherit;
            padding-top: 15px;
            float: right;
        }

        #contact {
            padding: 30px;
            color: black;
            font-size: 20px;
        }


        #speerd {
            border: none;
            border-radius: 10px;
            color: black;
            font-family: inherit;
            font-size: 20px;
            padding: 15px;
            color: floralwhite;
            background-color: rgb(112, 112, 112);
            color: azure;
        }

            #speerd:hover {
                background-color: rgb(194, 192, 192);
                color: black;
                text-decoration: none;
            }

        .form-inline {
            justify-content: right;
            color: black;
        }

        /* footer */
        .fa-facebook {
            font-size: 40px;
            color: blue;
            padding-right: 15px;
        }

        .fa-snapchat-ghost {
            font-size: 40px;
            color: yellow;
            -webkit-text-stroke-width: 1px;
            -webkit-text-stroke-color: black;
            padding-right: 15px;
        }

        .fa-instagram {
            font-size: 40px;
            color: red;
        }

    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container" id="navs">
                <a class="navbar-brand" asp-area="" id="logo" asp-controller="Home" asp-action="Index"><img src="~/imgs/logo.png" alt="" width="95" height="76" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact" id="contact">Contact</a>
                        </li>
                        @if (User.Identity.IsAuthenticated  )
                        {
                            <li class="nav-item">
                                <a class="nav-link" id="contact" asp-controller="Csvfilemodels" asp-action="Index"><i class="arrow-right-square-fill "></i>File Upload</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" id="speerd" asp-page="/Account/Logout"><i class="arrow-right-square-fill "></i> Logout</a>
                            </li>
                          }
                         
                        
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" id="speerd" asp-page="/Account/register"><i class="arrow-right-square-fill "></i> Register</a>
                            </li>
                        }

                  
                     
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container-fluid text-center py-3">
        <div class="row">
            <div class="col-sm-4"><img src="./imgs/logo.png" alt="" width="70" height="50" id="logo" className="img-fluid mb-2" /><small>Copyright Â© Speerd</small></div>
            <div class="col-lg-4 my-3">
                <i class="fa fa-facebook rounded-circle p-2" aria-hidden="true"></i>
                <i class="fa fa-snapchat-ghost rounded-circle p-2" aria-hidden="true"></i>
                <i class="fa fa-instagram rounded-circle p-2" aria-hidden="true"></i>
            </div>
            <div class="col-sm-4"><small><a href="PrivacyPolicy.html">Privacy Policy</a> <a href="TermsOfUse.html">Terms of Use</a></small></div>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.5.0-beta4/html2canvas.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>
    <script src="https://d3js.org/d3.v7.min.js">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
