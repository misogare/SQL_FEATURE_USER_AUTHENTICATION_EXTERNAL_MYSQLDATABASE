@page "/register"
@model App.Pages.Account.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    <head>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
            /* navbar*/
            #logo {
                color: black;
                font-size: 24px;
                font-family: inherit;
            }

            #navs {
                padding-left: 100px;
            }

            .nav-item {
                list-style-type: none;
                font-family: inherit;
                padding-top: 15px;
                float: right;
            }

            #contact {
                padding: 30px;
                color: black;
                font-size: 20px;
            }
            /*form */

   #form1{
       text-align: center;
       justify-content: center;
   }
      #div1
            {
                margin-left: 500px;
                width: 400px;
                text-align: center;
                font-size: 20px;
            }

            h1 {
                font-size: 34px;
                font-weight: bold;
                margin-bottom: 20px;
            }

            #form1 {
                text-align: center;
                justify-content: center;
            }

            .text-danger {
                color: red;
            }
            /* Adding styles to input fields */

            #Username {
                border: none;
                border-radius: 10px;
                color: black;
                font-family: inherit;
                font-size: 20px;
                background-color: #E8EDEB;
                padding-left: 20px;
                height: 50px;
                width: 700px;
            }

            #button {
                border: none;
                border-radius: 10px;
                font-family: inherit;
                font-size: 20px;
                padding: 15px;
                color: floralwhite;
                background-color: rgb(112, 112, 112);
                color: azure;
                width: 160px;
            }

                #button:hover {
                    background-color: rgb(194, 192, 192);
                    color: black;
                    text-decoration: none;
                }

            label{
                font-size: 20px;
                padding-right: 10px;
            }

</style>
</head>


    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container" id="navs">
                <a class="navbar-brand" asp-area="" id="logo" asp-controller="Home" asp-action="Index"><img src="~/imgs/logo.png" alt="" width="75" height="55" />Speerd</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                         </div>
        </nav>
    </header>

    <div id="div1">
    <form id="form1" method="post">


        <table>
            <tr>
                <td>
                    <h1>Register</h1>
                        <hr />
                </td>
            </tr>

                <tr>
                    <td class="form-group">
                        <label asp-for="ApplicationUser.Username" class="control-label"></label>
                        <input type="ApplicationUser_Username" id="Username" name="ApplicationUser.Username" class="auto-style7" />
                        <span asp-validation-for="ApplicationUser.Username" class="text-danger"></span>
                    </td>
                </tr>

            <tr>

                <tr>
                    <td class="form-group">
                        <label asp-for="ApplicationUser.Password" class="control-label"></label>
                        <input type="ApplicationUser_Password" id="Username" name="ApplicationUser.Password" class="auto-style7" />
                        <span asp-validation-for="ApplicationUser.Password" class="text-danger"></span>
                    </td>
                </tr>


                <td class="form-group">
                    <label asp-for="ApplicationUser.Email" class="control-label"></label>
                    <input type="ApplicationUser_Email" id="Username" name="ApplicationUser.Email" class="auto-style7" />
                        <span asp-validation-for="ApplicationUser.Email" class="text-danger"></span>
                </td>
            </tr>
          

                   </table>
            <br />
            <input id="button" type="submit" class="auto-style10">

        </form>

    <form method="get" action="/login">
    <h3>Login Now!</h3>
            <input id="button" type="submit" value="Login" />
    </form>

    </div>


 }

